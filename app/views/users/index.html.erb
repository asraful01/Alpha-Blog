<meta name="viewport" content="width=device-width, initial-scale=1.0">

<h1 align="center">All Alpha Bloggers</h1>

<div align="center" class="col-sm">

<div class="paginate">
  <%=  will_paginate @user, :previous_label =>'prev', :next_label =>'next' %>
</div>

<% @users.each do |user| %>

<ul class="listing ">

<div class="container col-sm">

<div class="card shadow col-md-4 ">

<li><%= link_to gravatar_for(user), user_path(user) %></li>

<li class="card-title">

<%= link_to user.username, user_path(user) %>

</li>

<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
<% if logged_in? and current_user.admin? %>
<li> <%= link_to "Delete this user", user_path(user), method: :delete,
data: {confirm: "Are you sure you want to delete this user and all their articles?"} %>
<% end %>

</div>

</div>

</ul>

<% end %>

<div class="paginate">
  <%=  will_paginate @user, :previous_label =>'prev', :next_label =>'next' %>
</div>

</div>
