<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
     <li> <%= msg %> </li>
   <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
<div class="form-group row">
  <div class="col-form-label col-sm-2">
     <%= f.label :title %>
   </div>

   <div class="col-sm-8">
       <%= f.text_field :title, class:"form-control", placeholder:"Title of article", autofocus:true %>
     </div>
   </div>
   <div class="form-group row">
     <div class="col-form-label col-sm-2">

     <%= f.label :description%>
   </div>
   <div class="col-sm-8">
     <%= f.text_area :description, rows:8,class: "form-control", placeholder:"Body of article" %>
</div>
</div>
<div align="center" class="form-group">
  <div class="col-sm-offset-2-sm-10">

     <%= f.submit class:"btn btn-primary btn-lg" %>
   </div>
 </div>

    <% end %>

<div align="center" class="col-xs-4 col-xs-offset-4">
    <%= link_to "Cancel request and return to articles listing", articles_path %>
  </div>
</div>
